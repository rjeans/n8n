# GCP Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"  # Free tier eligible: us-central1, us-east1, us-west1
zone       = "us-central1-a"

# Instance Configuration
instance_name = "n8n-server"
machine_type  = "e2-micro"  # Free tier eligible
environment   = "production"

# Disk Configuration
boot_disk_size_gb = 10   # OS disk
data_disk_size_gb = 20   # Persistent data (n8n + PostgreSQL)

# SSH Configuration
ssh_user       = "ubuntu"
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EA... your-public-key-here"

# Security: Restrict SSH access to your IP (recommended)
# Leave empty to allow from anywhere (not recommended for production)
ssh_source_ranges = [
  # "1.2.3.4/32",  # Your home IP
  # "5.6.7.8/32",  # Your office IP
]

# Static IP (optional)
# Set to true if you want a reserved static IP address
# Note: Static IPs incur a small charge if not attached to a running instance
use_static_ip = false

# Additional Labels (optional)
labels = {
  owner       = "your-name"
  cost_center = "personal"
  backup      = "daily"
}
